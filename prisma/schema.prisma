datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model ArticleEventEntity {
  articleId String
  eventType String
  eventData String   // イベントデータ（タイトル、コンテンツ、著者IDなど）をJSON形式で保存
  eventDate DateTime @default(now()) // イベント発生日時
  version   Int   // バージョン番号

  @@map("article_events")
  @@unique([articleId, version])
}

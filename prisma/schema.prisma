datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model ArticleEvent {
  id        String   @id @default(cuid())
  articleId String
  eventType String
  eventData String   // イベントデータ（タイトル、コンテンツ、著者IDなど）をJSON形式で保存
  eventDate DateTime @default(now()) // イベント発生日時
  version   Int

  @@map("article_events")
  @@index([articleId, version])
}

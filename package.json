{
  "name": "domain_driven_design_sample",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "concurrently -c \"magenta,cyan\" -n \"readmodel,server\" \"pnpm subscribe\" \"pnpm dev:api\"",
    "doc": "tsx scripts/generateOpenAPI.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev:api": "tsx watch server.ts",
    "migration": "prisma migrate dev",
    "test": "vitest --run && npx vite preview --outDir .test",
    "lint": "oxlint --tsconfig tsconfig.json --deny-warnings .",
    "lint:fix": "oxlint --tsconfig tsconfig.json --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "subscribe": "tsx scripts/subscribeDomainEvent"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.0",
    "@hono/zod-openapi": "^1.1.3",
    "@prisma/client": "^6.14.0",
    "@scalar/hono-api-reference": "^0.9.21",
    "argon2": "^0.44.0",
    "dotenv": "^16.4.5",
    "hono": "^4.9.4",
    "hono-simple-di": "^0.2.1",
    "inversify": "^7.9.0",
    "kafkajs": "^2.2.4",
    "redis": "^5.8.2",
    "reflect-metadata": "^0.2.2",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@types/inversify": "^2.0.33",
    "@types/node": "^20.11.17",
    "@vitest/ui": "2.1.9",
    "concurrently": "^8.2.2",
    "oxlint": "^1.20.0",
    "prettier": "^3.6.2",
    "prisma": "^6.14.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^2.1.3"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"

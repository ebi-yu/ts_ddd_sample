{
  "name": "domain_driven_design_sample",
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "dev": "pnpm prepare && pnpm start:all",
    "doc": "tsx scripts/generateOpenAPI.ts",
    "migration": "prisma migrate dev",
    "prepare": "docker compose up -d && pnpm migration",
    "start:all": "concurrently -c \"magenta,cyan,green,yellow\" -n \"readmodel,server,outbox,resync\" \"pnpm subscribe\" \"pnpm start:api\" \"pnpm outbox\" \"pnpm resync:readmodel\"",
    "start:api": "tsx watch server.ts",
    "subscribe": "tsx scripts/subscribeDomainEvent",
    "outbox": "tsx scripts/dispatchOutboxEvents.ts",
    "resync:readmodel": "tsx scripts/resynchronizeArticleReadModel.ts",
    "test:small": "vitest --run && npx serve .test-small",
    "test:e2e": "pnpm test:e2e:prepare && sleep 2 &&  pnpm test:e2e:run",
    "test:e2e:prepare": "docker compose -f docker-compose.yml -f docker-compose.e2e.yml up -d && pnpm migration",
    "test:e2e:run": "sh ./tests/e2e/run-e2e.sh",
    "teardown": "sh ./tests/e2e/teardown.sh",
    "lint": "oxlint --tsconfig tsconfig.json --deny-warnings .",
    "lint:fix": "oxlint --tsconfig tsconfig.json --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@hono/node-server": "^1.19.0",
    "@hono/zod-openapi": "^1.1.3",
    "@prisma/client": "^6.14.0",
    "@scalar/hono-api-reference": "^0.9.21",
    "argon2": "^0.44.0",
    "dotenv": "^16.4.5",
    "hono": "^4.9.4",
    "hono-simple-di": "^0.2.1",
    "kafkajs": "^2.2.4",
    "redis": "^5.8.2",
    "reflect-metadata": "^0.2.2",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@vitest/ui": "2.1.9",
    "concurrently": "^8.2.2",
    "oxlint": "^1.20.0",
    "prettier": "^3.6.2",
    "prisma": "^6.14.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^2.1.3"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"
}
